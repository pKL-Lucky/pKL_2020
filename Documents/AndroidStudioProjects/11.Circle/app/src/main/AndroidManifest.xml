<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.circle"
    android:installLocation="auto">
//线性布局
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".RecyclerStaggeredActivity" android:exported="true" />
        <activity android:name=".RecyclerLinearActivity" android:exported="true"/>
        <activity android:name=".RecyclerGridActivity" android:exported="true"/>
        <activity android:name=".RecyclerDynamicActivity" android:exported="true"/>
        <activity android:name=".RecyclerCombineActivity" android:exported="true"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>